
<h1>Review Form for <%= @restaurant.name %></h1>

<%= form_for [@restaurant, @review] do |f| %>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :body, "Review" %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Add Review" %>
  </div>

<% end %>
